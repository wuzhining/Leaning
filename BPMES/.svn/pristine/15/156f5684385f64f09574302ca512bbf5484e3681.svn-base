/* 通配设置   1em = 10px */
html,body{
	background-color:#383A4C;
	width:100%;
	height:100%;
	font-family: Microsoft YaHei;
}
/* 看板导航条样式重写 */
.navbar-default{
	background-color: #4C4E5C;
	border-color: #4C4E5C;
	min-height: 60px;
	margin-bottom: 10px;
	height:7.4%;
}
.navbar{
	border-radius: 0px;
}
.container-fluid{
	position: relative;
}
.navbar-header{
	width:10%;
	height:100%;
	float: left;
}
.logo{
	width:50px;
	height:50px;
	margin:5px 0px 0px 2%;
	float: left;
}
.navbar-default .navbar-text{
	color: #C1C1C5;
}
.navbar-text{
	margin: 15px 0px 15px 10px;
	font-size: 3em;
	font-weight: bold;
}
.title{
	position: absolute;
	left: 0;
    right: 0;
	float:left;
	width:20%;
	height:60px;
}
.title-p{
	margin: 10px 0px 10px 0px; 
	font-size:4em;
	width: 100%;
    text-align: center;
}
.time{
	float:right;
	width:20%;
	height:60px;
}
.time-p{
	margin: 40px 0px 10px 0px; 
	font-size:2.3em;
	width: 100%;
    text-align: center;
}

/* 主体部分 */
table{
	font-size :2.5em;
	color: #2077BB;
	font-weight: bold;
}
.main-body{
	margin:10px auto;
	padding:0px;
	width:98%;
	height:90%;
}
.line-info{
	width:100%;
	height:30.35%;
}
.charts{
	width:100%;
	height:40%;
}
.employees-info{
	width:100%;
	height:29.63%;
}
.employees-info table tr td{
	width:25%;
}
.line-info-table{
	height:100%;
	width:100%;
	margin:0px;
}
.line-info-table tr td{
	border:1px solid #727487;
	position: relative;
}
.line-info-table tr td span{
	width:100%;
	left:50%;
	text-align:center;
	position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
}
#personnel-info{
	width:100%;
	height:55.4%;
}
#personnel-info td div{
	float:left;
	height:90%;
}
#personnel-info td div p{
	width:100%;
	height:33.33%;
	margin:5px 0 0 12px;
}
#stauts-normal,#stauts-Abnormal,#stauts-stop{
	color:#FFFF00;
}
.charts{
	border-left:1px solid #727487;
	border-right:1px solid #727487;
	padding:10px 0px 10px 0px;
}
.employees-info-div{
	width:65%;
}
.employees-img{
	width:34%;
}
